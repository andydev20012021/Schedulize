<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Schedulize" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/on_surface_100</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_surface_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/on_surface_100</item>
        <item name="colorSecondaryVariant">@color/on_surface_200</item>
        <item name="colorOnSecondary">@color/on_surface_300</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/on_surface_100</item>
        <item name="android:textColor">@color/on_surface_300</item>

        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.MaterialComponents.TimePicker</item>

    </style>


    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@drawable/shrine_display_color</item>
    </style>

    <style name="Widget.App.TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/on_surface_100</item>
        <item name="clockHandColor">@color/on_surface_200</item>
        <item name="clockNumberTextColor">@color/on_surface_300</item>
    </style>


    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/subtitle_1</item>
    </style>

    <style name="ThemeOverlay.Schedulize.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/widget_background_color</item>
        <item name="appWidgetTextColor">@color/on_surface_100</item>
        <item name="appWidgetTextSecondaryColor">@color/on_surface_200</item>
    </style>
</resources>