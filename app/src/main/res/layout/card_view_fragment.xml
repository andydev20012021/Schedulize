<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionName="root">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/primary"/>

    <TextView
        android:id="@+id/subject_name"
        android:transitionName="subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/on_surface_100"
        android:textSize="@dimen/heading_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="11dp"
            android:alpha="0.6"
            android:src="@drawable/ic_baseline_today_24" />

        <TextView
            android:id="@+id/subject_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:textSize="@dimen/subtitle_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="11dp"
            android:alpha="0.6"
            android:src="@drawable/ic_baseline_access_time_24" />

        <TextView
            android:id="@+id/subject_period"
            android:transitionName="subject_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:textSize="@dimen/subtitle_1" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="11dp"
            android:alpha="0.6"
            android:src="@drawable/ic_baseline_person_outline_24" />

        <TextView
            android:id="@+id/subject_teacher"
            android:transitionName="subject_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:textSize="@dimen/subtitle_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="11dp"
            android:alpha="0.6"
            android:src="@drawable/ic_outline_location_on_24" />

        <TextView
            android:id="@+id/subject_place"
            android:transitionName="subject_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:textSize="@dimen/subtitle_1" />
    </LinearLayout>


</LinearLayout>

