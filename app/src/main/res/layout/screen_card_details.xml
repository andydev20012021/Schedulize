<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionName="root">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/primary"
        app:menu="@menu/card_view_menu"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/on_surface_100"
        app:title=""
        app:titleTextColor="@color/on_surface_100" />

    <TextView
        android:id="@+id/subject_name"
        style="@style/Heading2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/on_surface_100"
        android:transitionName="subject_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:alpha="0.6"
            android:src="@drawable/ic_today" />

        <TextView
            android:id="@+id/subject_day"
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:alpha="0.6"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/subject_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:textSize="@dimen/subtitle_1"
            android:transitionName="subject_period" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teacher_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:alpha="0.6"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/subject_teacher"
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:transitionName="subject_teacher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:alpha="0.6"
            android:src="@drawable/ic_place" />

        <TextView
            android:id="@+id/subject_place"
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/on_surface_100"
            android:transitionName="subject_place" />
    </LinearLayout>


</LinearLayout>

