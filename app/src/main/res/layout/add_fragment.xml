<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.add.AddFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="8dp"
            app:errorEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="@color/on_surface_300">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:hint="@string/subject_name"
                android:inputType="text"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/subtitle_1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="28dp"
            app:errorEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="@color/on_surface_300">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/subject_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary"
                android:hint="@string/subject_day_of_week"
                android:inputType="none"
                android:textSize="@dimen/subtitle_1" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/subject_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:hint="@string/subject_start_time"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/on_surface_300">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/secondary"
                    android:inputType="none"
                    android:textIsSelectable="false"
                    android:focusable="false"
                    android:textSize="@dimen/subtitle_1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/subject_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:hint="@string/subject_end_time"
                app:helperText="@string/may_be_empty"
                app:hintEnabled="true"
                app:hintTextColor="@color/on_surface_300">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/secondary"
                    android:inputType="none"
                    android:textSize="@dimen/subtitle_1"
                    android:focusable="false"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subject_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="28dp"
            app:helperText="@string/may_be_empty"
            app:hintEnabled="true"
            app:hintTextColor="@color/on_surface_300">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:hint="@string/subject_teacher"
                android:inputType="text"
                android:maxLines="1"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/subtitle_1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subject_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal"
            android:layout_marginTop="28dp"
            android:textCursorDrawable="@drawable/cursor"
            app:helperText="@string/may_be_empty"
            app:hintEnabled="true"
            app:hintTextColor="@color/on_surface_300">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:hint="@string/subject_place"
                android:inputType="text"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/subtitle_1" />
        </com.google.android.material.textfield.TextInputLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="@dimen/basic_margin_horizontal">

            <LinearLayout
                android:id="@+id/cards_color_items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginEnd="@dimen/margin_between_views"
                    android:src="@drawable/ic_baseline_check_24"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_red"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_orange"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_yellow"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_green"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_blue_green"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_blue"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_dark_blue"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_violet"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_pink"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginHorizontal="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_brown"
                    android:background="@drawable/card_color_base_background"/>

                <ImageView
                    android:layout_width="@dimen/color_view_size"
                    android:layout_height="@dimen/color_view_size"
                    android:layout_marginStart="@dimen/margin_between_views"
                    android:backgroundTint="@color/card_color_grey"
                    android:background="@drawable/card_color_base_background"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
