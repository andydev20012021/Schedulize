<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentMain">

    <fragment
        android:id="@+id/fragmentMain"
        android:name="uz.techie.schedulize.ui.MainFragment"
        android:label="fragment_main_fragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_fragmentMain_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_fragmentMain_to_cardViewFragment"
            app:destination="@id/cardViewFragment" />
        <action
            android:id="@+id/action_fragmentMain_to_settingFragment"
            app:destination="@id/settingFragment" />

    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="uz.techie.schedulize.ui.add.AddFragment"
        android:label="add_fragment"
        tools:layout="@layout/add_fragment" >

        <argument android:name="arg_subject_id"
            app:argType="integer"
            android:defaultValue="-1" />

    </fragment>

    <fragment
        android:id="@+id/cardViewFragment"
        android:name="uz.techie.schedulize.ui.cardview.CardViewFragment"
        android:label="card_view_fragment"
        tools:layout="@layout/card_view_fragment" >
        <action
            android:id="@+id/action_cardViewFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_cardViewFragment_to_fragmentMain"
            app:destination="@id/fragmentMain"
            app:launchSingleTop="true" />
        <argument
            android:name="arg_view_subject_id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="uz.techie.schedulize.ui.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_fragmentMain"
            app:launchSingleTop="true"
            app:destination="@id/fragmentMain" />
    </fragment>

    <fragment
        android:id="@+id/cardListFragment"
        android:name="uz.techie.schedulize.ui.list.CardListFragment"
        android:label="card_list_fragment"
        tools:layout="@layout/card_list_fragment" />
</navigation>