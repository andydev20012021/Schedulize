<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uz.techie.schedulize">

    <application
        android:name=".utils.SchedulizeApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_schedulize"
        android:label="@string/application_name"
        android:roundIcon="@drawable/ic_schedulize"
        android:supportsRtl="true"
        android:theme="@style/Theme.Schedulize">
        <service android:name=".services.SchedulizeWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
        <receiver android:name=".SchedulizeWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/schedulize_widget_info" />
        </receiver>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>